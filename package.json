    "version": "1.0.0",
    "description": "user management service",
    "main": "index.js",
    "scripts": {
        "dev": "npx tsc && node dist/server.js",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --write",
        "lint:check": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepare": "husky install"
