    },
    "keywords": [
        "microservice",
        "auth",
        "user-management"
    ],
    "author": "Umesh Pawar <umesh.a.pawar0805@gmail.com>",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/up-the-dev/auth-service/issues"
    },
    "homepage": "https://github.com/up-the-dev/auth-service#readme",
    "devDependencies": {
        "@types/node": "^20.8.8",
        "@typescript-eslint/eslint-plugin": "^6.9.0",
        "@typescript-eslint/parser": "^6.9.0",
        "eslint": "^8.52.0",
        "eslint-config-prettier": "^9.0.0",
        "husky": "^8.0.3",
        "lint-staged": "^15.0.2",
        "prettier": "3.0.3",
        "typescript": "^5.2.2"
    },
    "lint-staged": {
        "*.ts": [
